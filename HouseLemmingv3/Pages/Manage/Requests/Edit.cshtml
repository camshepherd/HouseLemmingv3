@page
@model HouseLemmingv3.Pages.Manage.Requests.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Request</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Request.RequestId" />
            <input type="hidden" asp-for="Request.AdvertId" />
            <input type="hidden" asp-for="Request.DateCreation" />
            <input type="hidden" asp-for="Request.DateResponse" />
            <div class="form-group">
                <label asp-for="Request.Feedback" class="control-label"></label>
                <textarea rows="4" asp-for="Request.Feedback" class="form-control"></textarea>
                <span asp-validation-for="Request.Feedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.Approval" class="control-label"></label>
                <input asp-for="Request.Approval" class="form-control" />
                <span asp-validation-for="Request.Approval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<td>
    Subject Advert: <a asp-page="../Adverts/Details" asp-route-id="@ViewData["AdvertId"]">@(ViewData["AdvertName"])</a>
</td>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
