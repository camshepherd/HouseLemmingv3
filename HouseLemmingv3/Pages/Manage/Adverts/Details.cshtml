@page
@using Models
@model HouseLemmingv3.Pages.Manage.Adverts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Advert</h4>
    <hr />
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            @if (Model.Advert.Images.Count > 1)
            {
                for (var posk = 1; posk < Model.Advert.Images.Count; posk = posk + 1)
                {
                    <li data-target="#myCarousel" data-slide-to="@posk"></li>
                }
            }
        </ol>
        @if (Model.Advert.Images.Any())
        {
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="@Model.ImageHelpers.ViewImage(Model.Advert.Images[0].ImageId)" alt="@Model.Advert.Images[0].FileName" class="img-responsive"/>
                </div>

                @if (Model.Advert.Images.Count > 0)
                {
                    for (var posk = 1; posk < Model.Advert.Images.Count; posk = posk + 1)
                    {
                        <div class="item">
                            <img src="@Model.ImageHelpers.ViewImage(Model.Advert.Images[posk].ImageId)" alt="@Model.Advert.Images[posk].FileName" class="img-responsive"/>
                        </div>
                    }
                }
                
                
                
            </div>
        }
        else
        {
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/images/default-image.jpg" alt="Default Image" class="img-responsive"/>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
            

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Advert.ApplicationUser.UserName)
        </dt>
